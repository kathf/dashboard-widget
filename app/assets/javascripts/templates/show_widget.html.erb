<div ng-repeat="widget in widgetsDisplayed" class="panel panel-default widget-display-panel col-sm-4 widget-dimensions" ng-hide="widget.display == false">
  <div class="panel-heading">
    <div class="pull-right">
      <a href ng-click=""><span class="glyphicon glyphicon-cog"></span></a>
      <a href ng-click="closeWidget(widget)"><span class="glyphicon glyphicon-remove"></span></a>
    </div>
    <h4> {{ widget.name }} </h4>
  </div>

  <div class="panel-body">
    <employee-locations-widget></employee-locations-widget>
  </div>
</div>
