<div ng-repeat="widget in widgetsDisplayed" class="panel panel-default widget-display-panel col-sm-4 widget-dimensions" ng-hide="widget.display == false">
  <div class="panel-heading">
    <div class="pull-right">
      <a href ng-click=""><span class="glyphicon glyphicon-cog"></span></a>
      <a href ng-click="closeWidget(widget)"><span class="glyphicon glyphicon-remove"></span></a>
    </div>
    <h4> {{ widget.name }} </h4>
  </div>

  <employee-locations-widget class="panel-body" ng-show="widget.ng_directive_tag == 'employee-locations-widget'"> </employee-locations-widget>
  <other-demo-widget class="panel-body" ng-show="widget.ng_directive_tag == 'other-demo-widget'">>
  </other-demo-widget>
  <sales-flow-widget class="panel-body" ng-show="widget.ng_directive_tag == 'sales-flow-widget'">> </sales-flow-widget>

</div>
